# Content Registry
# Register materials for the reading companion (./read).
# Copy to content_registry.yaml and customize.
#
# Page numbers are PDF page numbers (1-indexed), not book page numbers.

materials:
  # OpenStax Psychology 2e (CC BY 4.0)
  # https://openstax.org/details/books/psychology-2e
  psychology-2e:
    title: "Psychology 2e"
    author: "OpenStax"
    source: "reader/sources/psychology-2e/source.pdf"
    structure:
      type: "chapters"
      chapters:
        - { num: 1, title: "Introduction to Psychology", pages: [19, 46] }
        - { num: 2, title: "Psychological Research", pages: [47, 82] }
        - { num: 3, title: "Biopsychology", pages: [83, 122] }
        - { num: 4, title: "States of Consciousness", pages: [123, 160] }
        - { num: 5, title: "Sensation and Perception", pages: [161, 206] }
        - { num: 6, title: "Learning", pages: [207, 244] }
        - { num: 7, title: "Thinking and Intelligence", pages: [245, 290] }
        - { num: 8, title: "Memory", pages: [291, 326] }
        - { num: 9, title: "Lifespan Development", pages: [327, 380] }
        - { num: 10, title: "Motivation and Emotion", pages: [381, 414] }
        - { num: 11, title: "Personality", pages: [415, 454] }
        - { num: 12, title: "Social Psychology", pages: [455, 498] }
        - { num: 13, title: "Industrial-Organizational Psychology", pages: [499, 530] }
        - { num: 14, title: "Stress, Lifestyle, and Health", pages: [531, 566] }
        - { num: 15, title: "Psychological Disorders", pages: [567, 624] }
        - { num: 16, title: "Therapy and Treatment", pages: [625, 664] }

  # OpenStax Principles of Economics 3e (CC BY 4.0)
  # https://openstax.org/details/books/principles-economics-3e
  economics-3e:
    title: "Principles of Economics 3e"
    author: "OpenStax"
    source: "reader/sources/economics-3e/source.pdf"
    structure:
      type: "chapters"
      chapters:
        - { num: 1, title: "Welcome to Economics!", pages: [25, 42] }
        - { num: 2, title: "Choice in a World of Scarcity", pages: [43, 68] }
        - { num: 3, title: "Demand and Supply", pages: [69, 104] }
        - { num: 4, title: "Labor and Financial Markets", pages: [105, 132] }
        - { num: 5, title: "Elasticity", pages: [133, 158] }
        - { num: 6, title: "Consumer Choices", pages: [159, 182] }
        - { num: 7, title: "Production, Costs, and Industry Structure", pages: [183, 216] }
        - { num: 8, title: "Perfect Competition", pages: [217, 244] }
        - { num: 9, title: "Monopoly", pages: [245, 274] }
        - { num: 10, title: "Monopolistic Competition and Oligopoly", pages: [275, 300] }

# === Bundled Classics (EPUB) ===
# These are included with the repo in reader/classics/.
# EPUBs don't need chapter definitions - structure is extracted automatically.

  # Aristotle's Nicomachean Ethics (F.H. Peters translation)
  # https://www.gutenberg.org/ebooks/8438
  nicomachean-ethics:
    title: "Nicomachean Ethics"
    author: "Aristotle"
    source: "reader/classics/nicomachean-ethics.epub"

  # Don Quixote (John Ormsby translation)
  # https://www.gutenberg.org/ebooks/996
  don-quixote:
    title: "Don Quixote"
    author: "Miguel de Cervantes"
    source: "reader/classics/don-quixote.epub"

  # The Brothers Karamazov (Constance Garnett translation)
  # https://www.gutenberg.org/ebooks/28054
  brothers-karamazov:
    title: "The Brothers Karamazov"
    author: "Fyodor Dostoevsky"
    source: "reader/classics/brothers-karamazov.epub"

# === Articles ===
# Articles are single-unit content (no chapters). Use type: article.
# Bundled articles go in reader/articles/, user articles in reader/sources/.

  # Attention Is All You Need (Transformer paper)
  # https://arxiv.org/abs/1706.03762
  attention:
    title: "Attention Is All You Need"
    author: "Vaswani et al."
    source: "reader/articles/attention.pdf"
    structure:
      type: article

  # Einstein's photoelectric effect paper (1905)
  # https://astro1.panet.utoledo.edu/~ljc/PE_eng.pdf
  einstein-photoelectric:
    title: "On a Heuristic Point of View Concerning the Production and Transformation of Light"
    author: "Albert Einstein"
    source: "reader/articles/einstein-photoelectric.pdf"
    structure:
      type: article

# Setup:
#
# Bundled classics (reader/classics/) work out of the box - just copy entries above.
#
# To add your own materials:
#
# For PDFs (books with chapters):
# 1. Place PDF at reader/sources/<material-id>/source.pdf
# 2. Add entry with chapter page ranges (1-indexed PDF pages)
# 3. Verify with: knos read list
#
# For EPUBs:
# 1. Place EPUB at reader/sources/<material-id>/source.epub
# 2. Add entry with title/author only (structure extracted automatically)
# 3. Verify with: knos read list
#
# For Articles (PDFs without chapters):
# 1. Place PDF at reader/articles/<name>.pdf (bundled) or reader/sources/<name>.pdf
# 2. Add entry with structure.type: article
# 3. Verify with: knos read list
