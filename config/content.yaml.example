# Content Registry — Bundled Materials
#
# Run `uv run knos init` to create your config, or copy this to content.yaml.
#
# This file contains materials bundled with Knowledge OS that work immediately.
# For adding your own PDFs/EPUBs, see content.yaml.example.external

materials:
  # ==========================================================================
  # BUNDLED CLASSICS (EPUB)
  # ==========================================================================
  # From Project Gutenberg, included in knos/reader/classics/.
  # EPUBs don't need chapter definitions—structure is extracted automatically.

  # Aristotle's Nicomachean Ethics (F.H. Peters translation)
  # https://www.gutenberg.org/ebooks/8438
  nicomachean-ethics:
    title: "Nicomachean Ethics"
    author: "Aristotle"
    source: "knos/reader/classics/nicomachean-ethics.epub"

  # Don Quixote (John Ormsby translation)
  # https://www.gutenberg.org/ebooks/996
  don-quixote:
    title: "Don Quixote"
    author: "Miguel de Cervantes"
    source: "knos/reader/classics/don-quixote.epub"

  # The Brothers Karamazov (Constance Garnett translation)
  # https://www.gutenberg.org/ebooks/28054
  brothers-karamazov:
    title: "The Brothers Karamazov"
    author: "Fyodor Dostoevsky"
    source: "knos/reader/classics/brothers-karamazov.epub"

  # ==========================================================================
  # BUNDLED ARTICLES
  # ==========================================================================
  # Foundational papers included in knos/reader/articles/.
  # Articles are single-unit content (no chapters).

  # Attention Is All You Need (Transformer paper)
  # https://arxiv.org/abs/1706.03762
  attention:
    title: "Attention Is All You Need"
    author: "Vaswani et al."
    source: "knos/reader/articles/attention.pdf"
    structure:
      type: article

  # Einstein's photoelectric effect paper (1905)
  # https://astro1.panet.utoledo.edu/~ljc/PE_eng.pdf
  einstein-photoelectric:
    title: "On a Heuristic Point of View Concerning the Production and Transformation of Light"
    author: "Albert Einstein"
    source: "knos/reader/articles/einstein-photoelectric.pdf"
    structure:
      type: article

  # Experiments on Plant Hybridization (1866)
  # https://www.mendelweb.org/Mendel.html
  mendel-plant-hybridization:
    title: "Experiments on Plant Hybridization"
    author: "Gregor Mendel"
    source: "knos/reader/articles/mendel-plant-hybridization.pdf"
    structure:
      type: article

  # What is an Emotion? (1884)
  james-emotion:
    title: "What is an Emotion?"
    author: "William James"
    source: "knos/reader/articles/james-emotion.pdf"
    structure:
      type: article

  # Some Remarks on Logical Form (1929)
  wittgenstein-logical-form:
    title: "Some Remarks on Logical Form"
    author: "Ludwig Wittgenstein"
    source: "knos/reader/articles/wittgenstein-logical-form.pdf"
    structure:
      type: article

# =============================================================================
# ADDING YOUR OWN CONTENT
# =============================================================================
#
# For detailed examples with external textbooks, see:
#   config/content.yaml.example.external
#
# Quick reference:
#
# EPUB (easiest—no chapter definitions needed):
#   my-book:
#     title: "Book Title"
#     author: "Author Name"
#     source: "knos/reader/books/my-book/source.epub"
#
# PDF with chapters (requires page ranges):
#   my-textbook:
#     title: "Textbook Title"
#     author: "Author Name"
#     source: "knos/reader/books/my-textbook/source.pdf"
#     structure:
#       type: chapters
#       chapters:
#         - { num: 1, title: "Introduction", pages: [1, 20] }
#         - { num: 2, title: "Chapter Two", pages: [21, 45] }
#
# Article (single-unit PDF):
#   my-paper:
#     title: "Paper Title"
#     author: "Author et al."
#     source: "knos/reader/articles/my-paper.pdf"
#     structure:
#       type: article
#
# Verify with: uv run knos read list
